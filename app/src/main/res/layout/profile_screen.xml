<?xml version="1.0" encoding="utf-8"?>
<com.microsoft.xbox.xle.ui.XLERootView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:xle="http://schemas.android.com/apk/res-auto" android:id="@+id/profile_root" android:background="@drawable/background_default" android:layout_width="match_parent" android:layout_height="match_parent">
