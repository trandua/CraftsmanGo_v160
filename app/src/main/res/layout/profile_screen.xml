                        <com.microsoft.xbox.toolkit.ui.CustomTypefaceTextView android:textSize="17sp" android:id="@+id/profile_gamerscore" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:includeFontPadding="false" style="@style/SUI_white"/>
