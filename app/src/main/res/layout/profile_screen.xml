                    <com.microsoft.xbox.xle.ui.IconFontToggleButton android:id="@+id/profile_mute" android:background="@drawable/common_button_background" android:visibility="gone" android:layout_width="@dimen/profileMsaPicSize" android:layout_height="@dimen/profileSocialButtonsHeight" android:layout_marginLeft="-5dp" android:layout_marginTop="@dimen/profileSocialButtonsTopMargin" xle:icon_checked="@string/ic_VolumeDisabled2" xle:icon_size="18sp" xle:icon_unchecked="@string/ic_VolumeMute" xle:text_checked="@string/Narrator_Unmute" xle:text_unchecked="@string/Narrator_Mute"/>
                    <com.microsoft.xbox.xle.ui.IconFontToggleButton android:id="@+id/profile_report" android:background="@drawable/common_button_background" android:visibility="gone" android:layout_width="@dimen/profileMsaPicSize" android:layout_height="@dimen/profileSocialButtonsHeight" android:layout_marginLeft="-5dp" android:layout_marginTop="@dimen/profileSocialButtonsTopMargin" xle:icon_checked="@string/ic_Complaint" xle:icon_size="16sp" xle:icon_unchecked="@string/ic_Complaint" xle:text_checked="@string/ProfileCard_Report" xle:text_unchecked="@string/ProfileCard_Report"/>
                    <com.microsoft.xbox.xle.ui.IconFontToggleButton android:id="@+id/profile_block" android:background="@drawable/common_button_background" android:visibility="gone" android:layout_width="@dimen/profileMsaPicSize" android:layout_height="@dimen/profileSocialButtonsHeight" android:layout_marginLeft="-5dp" android:layout_marginTop="@dimen/profileSocialButtonsTopMargin" xle:icon_checked="@string/ic_BadRecommendation" xle:icon_size="14sp" xle:icon_unchecked="@string/ic_BadRecommendation" xle:text_checked="@string/Profile_Profile_Unblock" xle:text_unchecked="@string/Profile_Profile_Block"/>
